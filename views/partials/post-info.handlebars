<article class="post">
  <div class="container">
    <div class="row">
      <div class="title col">
        <a href="{{post_url}}" target="_blank">{{title}}</a>
        {{!-- <span>({{format_url post_url}})</span> --}}
      </div>
      <div class="meta col">
        Posted by
        {{user.username}}
        on
        {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}}
          {{format_plural "comment" comments.length}}</a>
      </div>
    </div>
  </div>
  <div class="text-blk">{{post_text}}</div>
</article>